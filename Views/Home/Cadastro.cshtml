@model IEnumerable<GestaoPatrimonio.Models.User>
@using GridMvc.Html
@{
	ViewBag.Title = "Cadastro Usuário";
}
<hr>

@using (Html.BeginForm("Cadastro", "Home", new { pagesize = 15 }, FormMethod.Post, new { id = "subform" }))
{
	<div class="form-inline">
		<label class="control-label">Cadastro: </label>
		<input type="text" width="600" class="form-control" name="SearchKey" value="@ViewBag.Search" placeholder="Informe sua busca">
		<input type="submit" class="btn btn-default" id="btnSubmit" value="Buscar" />
		<label class="control-label" id="lblretornobusca" style="color: #337ab7;"></label>
	</div>
}


<hr>
@if (ViewBag.Cadastro != null)
{
	<h1> entrpuuuuuu</h1>
	<div style="width:1000px;">
		@Html.Grid(Model).Columns(columns =>
   {
	   columns.Add(c => c.Email).Titled("Email").SetWidth(380).Filterable(true);
	   columns.Add(c => c.Pass).Titled("Senha").SetWidth(20);
	   columns.Add()
	   .Encoded(false)
	   .Sanitized(false)
	   .SetWidth(30)
	   .Filterable(true)
	   .RenderValueAs(o => Html.ActionLink("Editar", "EditCaastro", new { id = o.ID }));
   }).WithPaging(ViewBag.PageSize).Sortable(true)
	</div>
}

